generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}

enum PunchType {
  ENTRY
  BREAK_START
  BREAK_END
  EXIT
}

enum UserNoteType {
  FOLGA
  FERIAS
  RECESSO
  OUTRO
}

model User {
  id       String @id @default(cuid())
  nome     String
  cpf      String @unique @db.VarChar(14)
  deviceId String @unique @db.VarChar(128)
  funcao       String?  @db.VarChar(80)
  departamento String?  @db.VarChar(80)
  admissao     DateTime? @db.DateTime(0)
  pisPasep     String?  @db.VarChar(30)

  historicos Historico[]
  notes      UserNote[]
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt

  @@index([cpf])
  @@index([deviceId])
}

model UserNote {
  id String @id @default(cuid())

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  type      UserNoteType @default(OUTRO)
  startDate DateTime     @db.DateTime(0) // início do período
  endDate   DateTime     @db.DateTime(0) // fim do período (inclusive)
  note      String       @db.VarChar(500)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId, startDate, endDate])
}

model Historico {
  id String @id @default(cuid())

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  type     PunchType
  dataHora DateTime  @db.DateTime(0)

  protocolo  String  @unique @db.VarChar(64)
  hashSha256 String  @db.Char(64)
  status     Boolean @default(false)

  deviceId String @db.VarChar(128)

  createdAt DateTime @default(now())

  @@unique([protocolo, hashSha256])
  @@index([userId, dataHora])
  @@index([protocolo])
  @@index([hashSha256])
}
