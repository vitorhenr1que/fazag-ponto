generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}

enum PunchType {
  ENTRY
  BREAK_START
  BREAK_END
  EXIT
}

model User {
  id        String     @id @default(cuid())
  nome      String
  cpf       String     @unique @db.VarChar(14)
  deviceId  String     @unique @db.VarChar(128)

  historicos Historico[]

  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@index([cpf])
  @@index([deviceId])
}

model Historico {
  id         String    @id @default(cuid())

  userId     String
  user       User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  type       PunchType
  dataHora   DateTime  @db.DateTime(0)

  protocolo  String    @unique @db.VarChar(64)
  hashSha256 String    @db.Char(64)
  status     Boolean   @default(false)

  deviceId   String    @db.VarChar(128)

  createdAt  DateTime  @default(now())

  @@index([userId, dataHora])
  @@index([protocolo])
  @@index([hashSha256])
  @@unique([protocolo, hashSha256])
}